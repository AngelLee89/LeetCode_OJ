public class Solution 
{
    public int maxSubArray(int[] nums)
    {
        if (nums.length == 0 || nums == null)
        {
            return 0;
        }
        
        int dp = nums[0];//O(1) space from O(n)
        int maxSum = nums[0];
        
        for (int i = 1; i < nums.length; i++) 
        {
            dp = Math.max(nums[i], dp + nums[i]);//core
            maxSum = Math.max(dp, maxSum);
        }
        
        return maxSum; 
    }
}
